{
  "name": "tof-builds",
  "author": "dvaji",
  "version": "0.8.0",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist/*",
    "index.d.ts"
  ],
  "engines": {
    "node": ">=13"
  },
  "scripts": {
    "clean:dist": "rimraf dist/",
    "build:types": "tsc src/index.ts --declarationDir dist/ --lib esnext --emitDeclarationOnly --declaration",
    "build:lib": "vite build",
    "build": "pnpm clean:dist && pnpm build:lib && pnpm build:types",
    "lint": "eslint src/ --ext .ts",
    "generate": "node ./scripts/gen/index.mjs",
    "format-data": "prettier --loglevel warn --write \"src/data/**/*.json\"",
    "prepublishOnly": "pnpm generate && pnpm build"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.276.0",
    "@types/node": "^18.14.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "chalk": "^5.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.34.0",
    "prettier": "^2.7.1",
    "rimraf": "^4.1.2",
    "typescript": "^4.9.3",
    "vite": "^4.1.4"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
